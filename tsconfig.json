{
	"compilerOptions": {
		"outDir": "./dist/",
		"sourceMap": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"module": "commonjs",
		"target": "es6",
		"jsx": "react",
		"allowJs": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames":true,
		"newLine": "LF",
		"noImplicitThis": true,
		"noUnusedParameters": true,
		"pretty": true,
		"strictPropertyInitialization": true,
		"strict": true
	},
	"include": [
		"./src/**/*"
	]
}